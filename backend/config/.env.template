# Application Configuration
APP_NAME=job-intelligence-platform
ENVIRONMENT=development

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-account
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=JOB_INTELLIGENCE
SNOWFLAKE_SCHEMA=RAW
SNOWFLAKE_ROLE=ACCOUNTADMIN

# API Keys
OPENAI_API_KEY=your-openai-key

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_V1_PREFIX=/api/v1

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8501

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW__CORE__FERNET_KEY=generate-with-scripts/generate_secrets.py
AIRFLOW__WEBSERVER__SECRET_KEY=generate-with-scripts/generate_secrets.py

# Scraping Configuration
SCRAPE_DELAY=2
MAX_RETRIES=3
TIMEOUT=30

# Logging
LOG_LEVEL=INFO
