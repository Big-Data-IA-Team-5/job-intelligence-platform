# All Secrets Template
# Copy this file to secrets.yml and fill in your actual secrets
# NEVER commit the actual secrets.yml file to version control

# Snowflake Credentials
snowflake:
  account: your-account
  user: your-username
  password: your-password
  warehouse: COMPUTE_WH
  database: JOB_INTELLIGENCE
  role: ACCOUNTADMIN

# API Keys
api_keys:
  openai: sk-your-openai-key-here
  
# Database Credentials (for Airflow)
database:
  postgres_user: airflow
  postgres_password: airflow
  postgres_db: airflow

# Airflow Secrets
airflow:
  fernet_key: generate-using-python-cryptography
  webserver_secret_key: generate-random-string
  admin_password: admin

# Application Secrets
application:
  jwt_secret: generate-random-string
  encryption_key: generate-random-string

# Third-party Service Keys (if needed)
services:
  indeed_api_key: optional
  linkedin_api_key: optional
