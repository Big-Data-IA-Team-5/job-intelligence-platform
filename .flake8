[flake8]
max-line-length = 120
max-complexity = 15
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    .pytest_cache,
    dbt_packages,
    target,
    logs,
    node_modules,
    .eggs,
    *.egg
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504   # line break after binary operator
per-file-ignores =
    __init__.py:F401
